<?xml version="1.0" encoding="utf-8"?><!--app统一title-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_activity_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    tools:context=".base.BaseActivity">

    <!--左边布局 -->
    <LinearLayout
        android:id="@+id/ll_left_title_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/title_btn_color_selector"
            android:src="@drawable/ic_toolbar_left_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <!--左边分割线-->
        <View
            android:id="@+id/v_left_division_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:maxEms="8"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
            tools:text="标题"
            tools:visibility="visible" />
    </LinearLayout>

    <!--中间布局-->
    <TextView
        android:id="@+id/tv_middle_title"
        android:layout_width="@dimen/dp_255"
        android:layout_height="@dimen/dp_34"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:background="@drawable/bg_common_btn"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_18"
        tools:text="标题"
        tools:visibility="visible" />

    <!--右边布局-->
    <LinearLayout
        android:id="@+id/ll_right_title_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_8">

    </LinearLayout>


</FrameLayout>

