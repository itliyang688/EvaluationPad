<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_194"
        android:background="@mipmap/content_video_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_108">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12">

                    <cn.fek12.evaluation.view.widget.RoundImageView
                        android:id="@+id/ivCover"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_90"
                        android:background="@mipmap/mathematics_icon"
                        android:scaleType="centerCrop"
                        zhy:borderRadius="10dp"
                        zhy:type="round" />
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/players_icon1" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_108"
                    android:background="@mipmap/cover_video_bg1"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="五年级随堂测试报告法"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_10" />

            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:text="2018-07-06"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_9" />

                <ImageView
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:src="@mipmap/players_number_icon" />

                <TextView
                    android:id="@+id/tvPlayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="1006"
                    android:textColor="@color/app_bg"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_22"
            android:src="@mipmap/point_arrow"/>


        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_333"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginBottom="@dimen/dp_19"
            android:text="本周本校 36 位学生在学"/>
    </RelativeLayout>

</RelativeLayout>
