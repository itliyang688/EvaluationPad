<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_56"
    android:paddingLeft="@dimen/dp_56"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlContain"
        android:layout_width="@dimen/dp_122"
        android:layout_height="@dimen/dp_92"
        android:layout_marginTop="@dimen/dp_10">
        <cn.fek12.evaluation.view.widget.RoundImageView
            android:id="@+id/ivCover"
            android:layout_width="@dimen/dp_122"
            android:layout_height="@dimen/dp_92"
            zhy:borderRadius="10dp"
            android:scaleType="centerCrop"
            zhy:type="round"
            android:src="@mipmap/presentation_empty_bg"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:src="@mipmap/players_icon"/>
        <TextView
            android:id="@+id/tvPlayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="已观看80%"
            android:textSize="@dimen/sp_9"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/rlContain"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:paddingTop="@dimen/dp_6"
            android:lines="1"
            android:ellipsize="end"
            android:text="五年级随堂测试报告"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tvDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="top"
            android:lines="2"
            android:ellipsize="end"
            android:text="视频简介：课程是指学校学生所应学习的学科总和及其进程与安排。课程是对教育的目标、教学内容、教学活动方式的规划和设计，课程是指学校学生所应学习的学科总和及其进程与安排。"
            android:textSize="@dimen/sp_9"/>
        <TextView
            android:id="@+id/tvSemester"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/dp_5"
            android:text="人教版"
            android:textSize="@dimen/sp_9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlContain"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_999"
                android:layout_alignParentLeft="true"
                android:text="九年级  化学"
                android:textSize="@dimen/sp_9"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="2019-11-11"
                android:textSize="@dimen/sp_9"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>