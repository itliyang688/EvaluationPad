<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_169"
        android:background="@mipmap/answer_remind_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_88"
            android:textColor="@color/white"
            android:text="自主测评试卷保存成功"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_13"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/btn_focus_icon"
                android:text="确定"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/btn_normal_icon"
                android:layout_alignParentRight="true"
                android:text="取消"
                android:textColor="@color/color_999"
                android:gravity="center"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
