<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_23"
    android:orientation="vertical"
    xmlns:zhy="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="@dimen/dp_119"
        android:layout_height="@dimen/dp_93">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_11">

            <cn.fek12.evaluation.view.widget.RoundImageView
                android:id="@+id/ivCover"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_75"
                android:background="@mipmap/mathematics_icon"
                android:scaleType="centerCrop"
                zhy:borderRadius="10dp"
                zhy:type="round" />
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/players_icon1" />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/dp_119"
            android:layout_height="@dimen/dp_93"
            android:background="@mipmap/cover_video_bg"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_11"
        android:lines="2"
        android:ellipsize="end"
        android:text="五年级随堂测试报告法五年级随堂测试报告法五年级随堂测试报告法"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_8" />

    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_11"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="2018-07-06"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_7" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@mipmap/players_number_icon" />

        <TextView
            android:id="@+id/tvPlayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="1006"
            android:textColor="@color/app_bg"
            android:textSize="@dimen/sp_7" />
    </LinearLayout>
</LinearLayout>
