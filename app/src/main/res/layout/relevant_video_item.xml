<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlContain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.fek12.evaluation.view.widget.RoundImageView
            android:id="@+id/ivCover"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_75"
            zhy:borderRadius="10dp"
            android:scaleType="centerCrop"
            zhy:type="round"
            android:src="@mipmap/empty_bg"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:src="@mipmap/players_icon"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:layout_marginLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_6"
        android:lines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/rlContain"
        android:text="五年级随堂测试报告法师打发打发斯蒂芬"
        android:textSize="@dimen/sp_10"/>

    <TextView
        android:id="@+id/tvTextbook"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@+id/rlContain"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="@dimen/dp_3"
        android:text="数学"
        android:textSize="@dimen/sp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_toRightOf="@+id/rlContain"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_999"
            android:layout_alignParentLeft="true"
            android:text="2019-11-02"
            android:textSize="@dimen/sp_10"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/players_number_icon"/>
        <TextView
            android:id="@+id/tvPlayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_bg"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="5003"
            android:textSize="@dimen/sp_10"/>
    </LinearLayout>
</RelativeLayout>