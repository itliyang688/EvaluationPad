<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/plan_the_week_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_left_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:src="@drawable/ic_toolbar_left_back"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp_20"/>

    <RelativeLayout
        android:id="@+id/leftVideo"
        android:layout_width="@dimen/dp_581"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@mipmap/video_play_bg"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="@dimen/dp_464"
            android:layout_height="@dimen/dp_261"
            android:layout_marginLeft="@dimen/dp_67"
            android:layout_marginTop="@dimen/dp_91">

            <cn.fek12.evaluation.view.widget.MyJzvdStd
                android:id="@+id/jzVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_34"
            android:background="@mipmap/encourage_icon">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好好学习  天天向上"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_295"
        android:layout_height="match_parent"
        android:background="@mipmap/practice_bg"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifView"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_186"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_112"
            android:src="@mipmap/exercises_gif"/>
        <Button
            android:id="@+id/practiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_68"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_111"
            android:background="@mipmap/practice_btn"/>
    </RelativeLayout>

</RelativeLayout>
