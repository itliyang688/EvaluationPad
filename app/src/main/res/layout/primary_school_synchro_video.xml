<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/synchro_video_bg"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_marginBottom="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginStart="@dimen/dp_11"
            android:background="@drawable/title_btn_color_selector"
            android:src="@mipmap/back_icon" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15">

            <RelativeLayout
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@mipmap/line_bg"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:background="@mipmap/tag_header_bg"
                        android:gravity="center"
                        android:text="年级"
                        android:textColor="@color/color_333"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@mipmap/tag_header_bg"
                        android:gravity="center"
                        android:text="学科"
                        android:textColor="@color/color_333"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@mipmap/tag_header_bg"
                        android:gravity="center"
                        android:text="版本"
                        android:textColor="@color/color_333"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@mipmap/tag_header_bg"
                        android:gravity="center"
                        android:text="教材"
                        android:textColor="@color/color_333"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/label"
                android:paddingRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:scrollbars="none" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_14"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/content_bg">

            <RelativeLayout
                android:layout_width="@dimen/dp_277"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_62"
                    android:paddingRight="@dimen/dp_15">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/pencil_icon"/>
                    <TextView
                        android:id="@+id/tvText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="选择知识点"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_616"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                 <cn.fek12.evaluation.view.widget.MultipleStatusView
                     android:id="@+id/loadView"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:paddingTop="@dimen/dp_65"
                     android:layout_marginLeft="@dimen/dp_23"
                     android:layout_marginRight="@dimen/dp_23"
                     android:layout_marginBottom="@dimen/dp_28">
                     <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
                         xmlns:app="http://schemas.android.com/apk/res-auto"
                         android:id="@+id/refreshLayout"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         app:tr_wave_height="180dp"
                         app:tr_head_height="100dp">

                         <androidx.recyclerview.widget.RecyclerView
                             android:id="@+id/recyclerView"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                     </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
                 </cn.fek12.evaluation.view.widget.MultipleStatusView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_34"
                        android:layout_marginLeft="@dimen/dp_19"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/video_icon"/>
                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_63"
                        android:text="视频列表"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_19"
            android:src="@mipmap/pen_list_icon"/>
    </RelativeLayout>


</LinearLayout>
