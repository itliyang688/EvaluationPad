<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="visible"
                android:background="@mipmap/chart_record_bg">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="正确率"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"/>

                <RelativeLayout
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_160"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/tvTitle">
                    <cn.fek12.evaluation.view.widget.PieChartView
                        android:id="@+id/pieChartView"
                        android:layout_width="@dimen/dp_153"
                        android:layout_height="@dimen/dp_160"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center"
                                android:src="@drawable/error_shape"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:textSize="@dimen/sp_14"
                                android:text="答错"
                                android:textColor="@color/color_E5CE10"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_6"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center"
                                android:src="@drawable/correct_shape"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:text="答对"
                                android:textColor="#06BB86"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvCorrectCount"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:text="答对题数：180 道题"
                        android:gravity="center"
                        android:background="@drawable/option_shape1"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:text="总答题数：180 道题"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/option_shape2"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tvTimeDuration"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:text="总练习时长：160 分 59 秒"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:background="@drawable/option_shape3"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:visibility="visible"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_130"
                android:paddingLeft="@dimen/dp_130"
                android:paddingBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="近四周答题数"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:textColor="@color/color_333"/>
                <cn.fek12.evaluation.view.widget.BarChartView
                    android:id="@+id/barChartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_130"
                android:paddingLeft="@dimen/dp_130"
                android:paddingBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="近四周正确率"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:textColor="@color/color_333"/>
                <cn.fek12.evaluation.view.widget.AreaChartView
                    android:id="@+id/areaChartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="本周优秀排行"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:orientation="horizontal">
                    <cn.fek12.evaluation.view.widget.RoundImageView
                        android:id="@+id/ivMyHead"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:scaleType="centerCrop"
                        zhy:type="circle"
                        android:src="@mipmap/test_7"/>
                    <TextView
                        android:id="@+id/tvRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="本周排名 3 名"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_333"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head2">
                            <cn.fek12.evaluation.view.widget.RoundImageView
                                android:id="@+id/ivRankingHead2"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0.72dp"
                                android:layout_marginRight="0.72dp"
                                android:scaleType="centerCrop"
                                zhy:type="circle"
                                android:src="@mipmap/empty_bg"/>

                        </RelativeLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head1">
                            <cn.fek12.evaluation.view.widget.RoundImageView
                                android:id="@+id/ivRankingHead1"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0.72dp"
                                android:layout_marginRight="0.72dp"
                                android:scaleType="centerCrop"
                                zhy:type="circle"
                                android:src="@mipmap/empty_bg"/>

                        </RelativeLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head3">
                            <cn.fek12.evaluation.view.widget.RoundImageView
                                android:id="@+id/ivRankingHead3"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0.72dp"
                                android:layout_marginRight="0.72dp"
                                android:scaleType="centerCrop"
                                zhy:type="circle"
                                android:src="@mipmap/empty_bg"/>

                        </RelativeLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_3"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FEAC2C"
                        android:textSize="@dimen/sp_16"
                        android:text="查看排名详情"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/right_ranking"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
