<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSubject"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@+id/titleName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_46"
        android:layout_toLeftOf="@+id/llStartDate"
        android:background="@drawable/curriculum_shape_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@mipmap/pen_icon" />

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="学科"
            android:textColor="@color/color_FEAC2C"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/lower_icon" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llSubject"
        android:layout_marginTop="@dimen/dp_13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/chart_record_bg"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="正确率"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_160"
                    android:layout_below="@+id/tvTitle"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5">

                    <cn.fek12.evaluation.view.widget.PieChartView
                        android:id="@+id/pieChartView"
                        android:layout_width="@dimen/dp_153"
                        android:layout_height="@dimen/dp_160"
                        android:layout_centerInParent="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center"
                                android:src="@drawable/error_shape" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:text="答错"
                                android:textColor="@color/color_E5CE10"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center"
                                android:src="@drawable/correct_shape" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:text="答对"
                                android:textColor="#06BB86"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEmpty"
                        android:layout_width="@dimen/dp_300"
                        android:layout_height="@dimen/dp_160"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_333"
                        android:background="@color/white"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textSize="@dimen/sp_14"
                        android:text="暂无数据"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCorrectCount"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:background="@drawable/option_shape1"
                        android:gravity="center"
                        android:text="答对题数：0 道题"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/option_shape2"
                        android:gravity="center"
                        android:text="总答题数：0 道题"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tvTimeDuration"
                        android:layout_width="@dimen/dp_190"
                        android:layout_height="@dimen/dp_43"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/option_shape3"
                        android:gravity="center"
                        android:text="总练习时长："
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_130"
                android:paddingRight="@dimen/dp_130"
                android:paddingBottom="@dimen/dp_30"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:text="近四周答题数"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <cn.fek12.evaluation.view.widget.BarChartView
                    android:id="@+id/barChartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                android:paddingLeft="@dimen/dp_130"
                android:paddingRight="@dimen/dp_130"
                android:paddingBottom="@dimen/dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:text="近四周正确率"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <cn.fek12.evaluation.view.widget.AreaChartView
                    android:id="@+id/areaChartView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/chart_record_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="本周优秀排行"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:orientation="horizontal">

                    <cn.fek12.evaluation.view.widget.RoundImageView
                        android:id="@+id/ivMyHead"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test_7"
                        zhy:type="circle" />

                    <TextView
                        android:id="@+id/tvRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="本周排名 3 名"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head2">

                            <RelativeLayout
                                android:layout_width="@dimen/dp_61"
                                android:layout_height="@dimen/dp_61"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/circular_bg_shape2">

                                <cn.fek12.evaluation.view.widget.RoundImageView
                                    android:id="@+id/ivRankingHead2"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_60"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/empty_bg"
                                    zhy:type="circle" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head1">

                            <RelativeLayout
                                android:layout_width="@dimen/dp_61"
                                android:layout_height="@dimen/dp_61"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/circular_bg_shape1">

                                <cn.fek12.evaluation.view.widget.RoundImageView
                                    android:id="@+id/ivRankingHead1"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_60"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/empty_bg"
                                    zhy:type="circle" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_71"
                            android:layout_height="@dimen/dp_71"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@mipmap/ranking_head3">

                            <RelativeLayout
                                android:layout_width="@dimen/dp_61"
                                android:layout_height="@dimen/dp_61"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/circular_bg_shape3">

                                <cn.fek12.evaluation.view.widget.RoundImageView
                                    android:id="@+id/ivRankingHead3"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_60"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/empty_bg"
                                    zhy:type="circle" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ranking_3" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看排名详情"
                        android:textColor="#FEAC2C"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/right_ranking" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_310"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@mipmap/chart_record_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_30">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="练习记录"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/llTestRecord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:id="@+id/llRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="#FEAC2C"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/right_ranking" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/selectSubject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llSubject"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_27"
            android:background="@mipmap/subjtct_layout_bg"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_30"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_15"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llContain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
