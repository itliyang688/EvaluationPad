<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/title_btn_color_selector"
            android:src="@drawable/ic_toolbar_left_back"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_353"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@mipmap/specia_video_bg">
        <LinearLayout
            android:layout_width="@dimen/dp_496"
            android:layout_height="@dimen/dp_279"
            android:layout_marginTop="@dimen/dp_24">
            <cn.fek12.evaluation.view.widget.MyJzvdStd
                android:id="@+id/jzVideo"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_800"
        android:layout_height="@dimen/dp_128"
        android:background="@mipmap/chapter_bg"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
