<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_269"
        android:layout_height="@dimen/dp_175"
        android:background="@mipmap/answer_remind_bg2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_108"
            android:textColor="@color/color_333"
            android:text="要完成所有答题呦~"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/btn_focus_icon"
                android:text="确定"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
